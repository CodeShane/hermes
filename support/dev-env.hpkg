(defpkg dev-env
  :builder
  (fn []
    (core/link-/bin/sh)
    (os/setenv "PATH" (pkg-path "/bin" core/build-env))
    (os/setenv "LD_LIBRARY_PATH" (string (dyn :pkg-out) "/lib"))
    (os/setenv "PKG_CONFIG_PATH" (string (dyn :pkg-out) "/lib/pkgconfig"))
    (os/setenv "CFLAGS" "-O2 -fPIC")
    (defn install-dep
      [src]
      (os/mkdir "dep")
      (os/cd "dep")
      (unpack-src src)
      (when (os/stat "./configure")
        (sh/$ ./configure
              --prefix= ^ (dyn :pkg-out)))
      (sh/$ make
            -j (dyn :parallelism)
            CFLAGS= ^ (os/getenv "CFLAGS")
            LDFLAGS= ^ (os/getenv "LDFLAGS" "")
            PREFIX= ^ (dyn :pkg-out)
            install)
      (os/cd "..")
      (sh/$ rm -rf "./dep"))
    (each src [libbsd-src zlib-src xz-src lz4-src bzip2-src]
      (install-dep src))
    (os/setenv "CFLAGS" (string
                          (os/getenv "CFLAGS") " "
                          "-I" (dyn :pkg-out) "/include "
                          (sh/$<_ pkg-config --cflags zlib liblzma liblz4)))
    (os/setenv "LDFLAGS" (string
                           "-L" (dyn :pkg-out) "/lib "
                           "-Wl,-rpath=" (dyn :pkg-out) "/lib "
                           (sh/$<_ pkg-config --libs zlib liblzma liblz4)))
    (install-dep libarchive-src)
    (rewrite (string (dyn :pkg-out) "/lib/pkgconfig/libarchive.pc")
             |(string/replace "Libs: " (string "Libs: -Wl,-rpath=" (dyn :pkg-out) "/lib ") $))
    (spit (string (dyn :pkg-out) "/activate")
          (string
            "export PATH=" (dyn :pkg-out) "/bin:" (janet/janet :path) "/bin:" (core/build-env :path) "/bin\n"
            "export PKG_CONFIG_PATH=" (dyn :pkg-out) "/lib/pkgconfig\n"))))
